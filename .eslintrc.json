{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": ["prettier", "prettier/react"],
  "rules": {
    "prettier/prettier": "error",
    "linebreak-style": ["error", "unix"],
    "react/jsx-uses-vars": 2,
    "no-invalid-this": "off",
    "require-jsdoc": "off"
  },
  "plugins": ["react", "prettier"]
}
